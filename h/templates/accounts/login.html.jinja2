{% extends "h:templates/layouts/base.html.jinja2" %}

{% block header %}
  {% include "h:templates/includes/logo-header.html.jinja2" %}
{% endblock %}

{% block page_title %}Log in{% endblock %}

{% block content %}
  <div class="form-container content">
    <h1 class="form-header">Log in</h1>

    {{ form }}

    <footer class="form-footer">
      {% trans %} Don't have a Hypothesis account? {% endtrans %}
      <a class="link--footer" href="{{ request.route_path('signup') }}">{% trans %} Sign up {% endtrans %}</a>
    </footer>
  </div>
{% endblock content %}
